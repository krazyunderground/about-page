<style>
	:root {
		--astro-gradient: linear-gradient(15deg, #2d388a, #00aeef);
	}

	h1 {
		margin: 2rem 0;
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 80ch;
	}

	.text-gradient {
		font-weight: 900;
		background-image: var(--astro-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100% 200%;
		background-position-y: 100%;
		border-radius: 0.4rem;
		animation: pulse 5s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 100%;
		}
	}

	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		background: var(--astro-gradient);
		padding: 1rem;
		border-radius: 0.4rem;
		color: var(--color-bg);
	}

	.instructions code {
		font-size: 0.875em;
		border: 0.1em solid var(--color-border);
		border-radius: 4px;
		padding: 0.15em 0.25em;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
	
	.thanks {
		text-align: center;
	}

	.image-cropper {
		margin: auto;
		width: 128px;
		height: 128px;
		position: relative;
		overflow: hidden;
		border-radius: 50%;
	}

	.rounded {
		display: inline;
		margin: auto;
		height: 100%;
		width: auto;
	}
</style>
